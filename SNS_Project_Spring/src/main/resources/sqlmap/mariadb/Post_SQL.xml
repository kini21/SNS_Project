<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="post">
    
  <cache />
  
  <select id="selectList" resultType="hashmap">
        SELECT * 
          FROM POST
  </select>
  
  <insert id="insertItem" parameterType="hashmap" >
        INSERT INTO POST( PID
                        , CONTENTS
                        , USER_UID )
                  VALUES( ${pid}
                        , #{contents}
                        , ${user_uid} )
  </insert>
  
<!-- POST FILE TABLE -->
  <select id="selectGroupKey" parameterType="hashmap" resultType="string">
		SELECT REPLACE(UUID() , '-' , '') AS GUID
  </select>
  
  <insert id="insertFile">
  INSERT INTO POST_FILE ( PID
                        , GROUP_KEY
                        , FILE_KEY
                        , FILE_REALNAME
                        , FILE_NAME
                        , FILE_PATH
                        , FILE_LENGTH
                        , FILE_TYPE
                        , DEL_YN
                        , REG_ID
                        , REG_DATE )
                 VALUES ( ${pid}
                        , #{GROUP_KEY}
                        , ${FILE_KEY}
                        , #{FILE_REALNAME}
                        , #{FILE_NAME}
                        , #{FILE_PATH}
                        , ${FILE_LENGTH}
                        , #{FILE_TYPE}
                        , 'N'
                        , #{USER_ID}
                        , SYSDATE() )
  </insert>
  
