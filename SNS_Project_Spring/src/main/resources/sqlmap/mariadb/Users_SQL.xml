<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="UserDAO">
    
  <cache />
  
  <select id="getUser" parameterType="com.sns.user.UserVO" resultType="com.sns.user.UserVO">
       <![CDATA[ SELECT * FROM USERS WHERE UID = #{uid} ]]>
  </select>
  
  <select id="getUserList" resultType="com.sns.user.UserVO">
        <![CDATA[ SELECT * FROM USERS ]]>
  </select>
   
  <insert id="insertUser" parameterType="com.sns.user.UserVO" >
        <![CDATA[ 
        INSERT INTO USERS (loginid, password, email, nick)
		VALUES(#{loginid},#{password},#{email},#{nick})
		]]>
  </insert>
  
  <update id="updateUser" parameterType="com.sns.user.UserVO">
       <![CDATA[ 
       UPDATE USERS SET
              PASSWORD = #{password},
              EMAIL = #{email},
              NICK = #{nick} 
        WHERE UID  = #{uid}
        ]]>
  </update>
  
  <delete id="deleteUser" parameterType="com.sns.user.UserVO" >
       <![CDATA[ DELETE FROM USERS WHERE UID = #{uid} ]]>
  </delete>
  
</mapper>